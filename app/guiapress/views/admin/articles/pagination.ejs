<%- include('../../partials/header.ejs') %>
<%- include('../../partials/navbarHomepage.ejs') %>
<body>
    <div class="container">
        <% articles.rows.forEach(article => { %>
            <div class="card">
                <div class="card-header">
                    <h2> <%= article.title %> </h2>
                </div>
                <div class="card-body">
                    <a class="btn btn-success" href="/<%= article.slug %>">Ler artigo</a>
                </div>
            </div>
        <% }) %>
    </div>
    <div class="row">
        <div class="col col-2">
            <% if (articles.page - 1 >= 1) { %>
                <a href="/articles/page/<%= articles.page - 1 %>"> <<< Prev</a>
            <% } else { %>
                <a href="/"> Home </a>
            <% } %>
        </div>
        <div class="col col-8"></div>
        <div class="col col-2">
            <% if (articles.next) { %>
                <a href="/articles/page/<%= articles.page + 1 %>">Next >>></a>
            <% } %>
        </div>
    </div>
</body>
<%- include('../../partials/footer.ejs') %>